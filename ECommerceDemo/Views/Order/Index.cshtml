@model IEnumerable<ECommerceDemo.Models.OrderToReturn>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-primary mb-2">Orders</h1>
<a class="btn btn-outline-secondary mb-2" asp-action="Index" asp-controller="Home" style="width:auto">Back to Home</a>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BuyerEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Total)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BuyerEmail)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Total)
                </td>
                <td>
                    @Html.ActionLink("Details", "ViewOrder", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>

